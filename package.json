{
  "name": "parakeet-coreml",
  "version": "0.1.0",
  "description": "NVIDIA Parakeet TDT ASR for Node.js with CoreML/ANE acceleration on Apple Silicon",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "parakeet-coreml": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "build",
    "src/*.mm",
    "src/*.h",
    "binding.gyp"
  ],
  "scripts": {
    "build:native": "node-gyp rebuild",
    "build:ts": "tsup",
    "build": "npm run build:native && npm run build:ts",
    "clean": "node-gyp clean && rm -rf dist coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node test.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [
    "asr",
    "speech-recognition",
    "transcription",
    "parakeet",
    "nvidia",
    "coreml",
    "apple-silicon",
    "neural-engine",
    "macos"
  ],
  "author": "Sebastian Werner",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/parakeet-coreml.git"
  },
  "bugs": {
    "url": "https://github.com/sebastian-software/parakeet-coreml/issues"
  },
  "homepage": "https://github.com/sebastian-software/parakeet-coreml#readme",
  "dependencies": {
    "bindings": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "prettier": "^3.7.4",
    "release-it": "^19.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "arm64"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
